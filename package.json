{
	"name": "www.bitswired.com",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev:only": "svelte-kit dev --host",
		"build:only": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"tailwind:watch": "TAILWIND_MODE=watch NODE_ENV=development tailwindcss -c tailwind.config.cjs -i src/styles/tailwind.css -o src/styles/tailwind-output.css --watch",
		"tailwind:build": "TAILWIND_MODE=build NODE_ENV=production tailwindcss -c tailwind.config.cjs -m -i src/styles/tailwind.css -o src/styles/tailwind-output.css",
		"dev": "concurrently \"npm run dev:only\" \"npm run tailwind:watch\"",
		"build": "npm run tailwind:build && npm run build:only"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/line-clamp": "^0.4.0",
		"@tailwindcss/typography": "^0.5.2",
		"@types/date-fns": "^2.6.0",
		"@types/marked": "^4.0.3",
		"@types/nunjucks": "^3.2.1",
		"@types/prismjs": "^1.26.0",
		"@types/qs": "^6.9.7",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"autoprefixer": "^10.4.7",
		"concurrently": "^7.1.0",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.13",
		"postcss-cli": "^9.1.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.5.0",
		"prettier-plugin-tailwindcss": "^0.1.11",
		"rollup-plugin-visualizer": "^5.6.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.10.1",
		"tailwindcss": "^3.0.24",
		"tslib": "^2.3.1",
		"typescript": "~4.6.2"
	},
	"dependencies": {
		"@zerodevx/svelte-toast": "^0.7.2",
		"clsx": "^1.1.1",
		"date-fns": "^2.28.0",
		"marked": "^4.0.16",
		"node-fetch": "^3.2.10",
		"nunjucks": "^3.2.3",
		"prismjs": "^1.28.0",
		"qs": "^6.10.5",
		"schema-dts": "^1.1.0",
		"svelte-icons": "^2.1.0",
		"tsx": "^3.8.0"
	}
}
